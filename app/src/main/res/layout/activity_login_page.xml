<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/Emaillog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="48dp"
        android:background="#CCCCCC"
        android:gravity="center"
        android:hint="Email"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/CPasswordlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_label"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/CPasswordlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="52dp"
        android:background="#CCCCCC"
        android:gravity="center"
        android:hint="Password"
        android:inputType="text|textPassword|textNoSuggestions"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/LoginBtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Emaillog"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/app_name_label"
        android:layout_width="187dp"
        android:layout_height="76dp"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:text="Woof Easy"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/LoginBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="9dp"
        android:text="Login"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CPasswordlog"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_1"
        android:layout_width="112dp"
        android:layout_height="87dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toTopOf="@+id/app_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_back"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/back_arrow_6"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onImageClicked"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow_6" />

</androidx.constraintlayout.widget.ConstraintLayout>