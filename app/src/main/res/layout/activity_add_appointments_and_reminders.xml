<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_appointments_and_reminders">

    <ImageView
        android:id="@+id/back_arrow_10"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onImageClicked"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/add_appoint_rem_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Appointments &amp; Reminders"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow_10" />

    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="155dp"
        android:layout_height="164dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_appoint_rem_label"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/appointment_date_input"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/contour_background"
        android:gravity="center"
        android:text="Date"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_icon" />

    <TextView
        android:id="@+id/appointment_time_input"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/contour_background"
        android:gravity="center"
        android:text="Time"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_date_input" />

    <TextView
        android:id="@+id/dog_name_for_appointment"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/contour_background"
        android:gravity="center"
        android:text="Companion Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_time_input" />

    <TextView
        android:id="@+id/appointment_location_input"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/contour_background"
        android:gravity="center"
        android:text="[Optional] Address/Info"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_name_for_appointment" />


</androidx.constraintlayout.widget.ConstraintLayout>