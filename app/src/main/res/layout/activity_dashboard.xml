<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Dashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/img"
        android:layout_width="306dp"
        android:layout_height="183dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/myCompbtn"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Companions"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:background="@drawable/background_of_button"
            app:backgroundTint="#5C8AC4"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/appointbtn"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Appointments &amp; Reminders"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            app:backgroundTint="#5C8AC4"
            android:background="@drawable/background_of_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/nearMebtn"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Dog Parks Near Me"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:backgroundTint="#5C8AC4"
            android:background="@drawable/background_of_button"/>

        <Button
            android:id="@+id/profilebtn"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Profile"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            app:backgroundTint="#5C8AC4"
            android:background="@drawable/background_of_button" />
    </LinearLayout>

</LinearLayout>
